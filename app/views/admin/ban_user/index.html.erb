<!DOCTYPE html>
<html lang="en">
<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <title>Ban/Unban User</title>
  <%= stylesheet_link_tag 'ban_user', media: 'all' %>
</head>
<body>
  <div class="container content_requests_index">
    <div class="card admin_header">
      <div class="overlay-container_admin_header">
        <img src="<%= asset_path('company.jpg') %>" alt="Header Background" class="background-image_admin_header">
        <div class="overlay_admin_header">
          <div class="header-text-group_admin_header">
            <h2 class="header-text_admin_header">Ban/UnBan User</h2>
            <h5 class="subheader-text_admin_header">Check for any suspicious person!</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="search-container_requests_index">
      <div class="">
        <div class="row">
          <div class="col-md-12">
            <form class="search-form_requests_index">
              <input type="text" class="search-input_requests_index_my form-control" id="searchInput" placeholder="Find your employees using their name, or their email!">
              <button type="submit" class="btn search-btn_requests_index"><i class="fas fa-search"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <ul class="nav nav-tabs ban-user-tabs mb-3 nav-fill" id="banUserTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="ban-tab" data-bs-toggle="tab" data-bs-target="#ban" type="button" role="tab" aria-controls="ban" aria-selected="true">Ban</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="unban-tab" data-bs-toggle="tab" data-bs-target="#unban" type="button" role="tab" aria-controls="unban" aria-selected="false">Unban</button>
      </li>
    </ul>

    <div class="tab-content ban-user-tab-content" id="banUserTabContent">
      <div class="tab-pane ban-user-tab-pane fade show active" id="ban" role="tabpanel" aria-labelledby="ban-tab">
        <div id="banUserContainer">
          <%= render partial: 'ban_user_card', collection: @under_review_users, as: :user %>
        </div>
      </div>

      <div class="tab-pane ban-user-tab-pane fade" id="unban" role="tabpanel" aria-labelledby="unban-tab">
        <div id="unbanUserContainer">
          <%= render partial: 'unban_user_card', collection: @banned_users, as: :user %>
        </div>
      </div>
    </div>
  </div>
</body>
<%= javascript_include_tag 'application' %>
<%= javascript_include_tag 'ban_user' %>
</html>