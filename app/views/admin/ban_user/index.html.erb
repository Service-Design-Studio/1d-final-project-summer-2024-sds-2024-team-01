<!DOCTYPE html>
<html lang="en">
<body>
<div class="container content_requests_index">
  <div class="container content_requests_index">
    <div class="card custom-card_requests_index">
      <div class="card-body header-container_requests_index">
        <h2 class="header-text_requests_index">Ban/Unban User</h2>
        <h5 class="subheader-text_requests_index">Check your reported users here!</h5>
      </div>
    </div>

    <!-- Tabs for Ban and Unban -->
    <ul class="nav nav-tabs" id="banUserTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="ban-tab" data-bs-toggle="tab" data-bs-target="#ban" type= "button" role="tab" aria-controls="ban" aria-selected="true">Ban</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="unban-tab" data-bs-toggle="tab"  data-bs-target="#unban" type="button" role="tab" aria-controls="unban" aria-selected="false">Unban User</a>
      </li>
    </ul>

    <div class="tab-content" id="banUserTabContent">
      <!-- Ban Users Tab -->
      <div class="tab-pane fade show active" id="ban" role="tabpanel" aria-labelledby="ban-tab">
        <%= render partial: 'ban_user', locals: { users: @reported_users } %>
      </div>

      <!-- Unban Users Tab -->
      <div class="tab-pane fade" id="unban" role="tabpanel" aria-labelledby="unban-tab">
        <%= render partial: 'ban_user', locals: { users: @banned_users } %>
      </div>
    </div>
  </div>
</body>
<%= javascript_include_tag 'ban' %>
</html>


