<% user.user_reports_as_reported_user.each do |user_report| %>
  <div class="card mb-3" style="max-width: 100%;">
    <div class="row g-0">
      <div class="col-md-4">
         <img src="<%= user.avatar_url %>" alt="Profile Picture" class="img-fluid rounded-start">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><small class="text-muted"><%= user.role.role_name %></small></p>
          <% if user.role.role_name == "Corporate Employee" && user.company %>
            <p class="card-text"><small class="text-muted">Company: <%= user.company.name %></small></p>
          <% end %>
          <p class="card-text"><small class="text-muted">Reported by: <%= user_report.reported_by.name %></small></p>
          <p class="card-text"><strong>Reason:</strong> <%= user_report.report_reason %></p>
          <div class="d-flex justify-content-between">
            <form method="post" action="<%= cancel_ban_admin_ban_user_path(user_report.reported_user) %>" class="btn btn-secondary">
              <input type="hidden" name="_method" value="patch">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <button type="submit" class="btn btn-secondary">Cancel</button>
            </form>
            <form method="post" action="<%= ban_admin_ban_user_path(user_report.reported_user) %>" class="btn btn-primary">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <button type="submit" class="btn btn-primary">Ban</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
