<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Charity Details</title>
  <link rel="stylesheet" href="<%= asset_path('approve_charities.css') %>">
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <!-- Charity Title -->
        <h2 class="card-title"><%= @charity.charity_name %></h2>

        <!-- Charity Details -->
        <div class="charity-details">
          <p class="card-text">
            <strong>Created At:</strong> <%= @charity.created_at.strftime('%d %b %Y, %H:%M') %><br>
            <strong>Charity Manager:</strong> <%= @charity.users.find_by(role_id: 5)&.name || 'No manager assigned' %><br>
            <strong>Status:</strong> <%= @charity.status %>
          </p>
        </div>

        <!-- Charity Document Proof -->
        <div class="charity-document">
          <% if @charity.document_proof.attached? %>
            <iframe src="<%= rails_blob_path(@charity.document_proof, disposition: 'inline') %>" width="100%" height="600px"></iframe>
          <% else %>
            <p class="no-document">No document proof attached.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
