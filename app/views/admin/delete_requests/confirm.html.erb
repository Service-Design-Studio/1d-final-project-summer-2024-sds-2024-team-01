<h1>Delete Request</h1>
<p>Are you sure you want to delete the following request?</p>

<p><strong>Title:</strong> <%= @request.title %></p>
<p><strong>Description:</strong> <%= @request.description %></p>

<%= form_with url: admin_delete_request_path(@request), method: :delete do %>
  <div class="form-group">
    <%= label_tag :reason, "Reason for deletion" %>
    <%= text_area_tag :reason, nil, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= submit_tag "Delete", class: "btn btn-danger" %>
  </div>
<% end %>

<%= link_to 'Cancel', admin_delete_requests_path, class: 'btn btn-secondary' %>
