<div class="container content_requests_index"> 
  <div class="card custom-card_requests_index">
    <div class="overlay-container_requests_index">
      <img src="<%= asset_path('pexels-rdne-6646917.jpg') %>" alt="Header Background" class="background-image_requests_index">
      <div class="overlay_requests_index">
        <div class="header-text-group_requests_index">
          <h2 class="header-text_requests_index">Manage Charities</h2>
          <h5 class="subheader-text_requests_index">Manage the charities recognised by your organisation here!</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="charity-search-cluster">
    <div class="search-container_requests_index">
      <form class="search-form_requests_index">
        <input type="text" class="search-input_requests_index_my form-control" id="searchInput" placeholder="Find the charities recognised by your organisation here!">
        <button type="submit" class="btn search-btn_requests_index"><i class="fas fa-search"></i></button>
      </form>
    </div>

    <%= form_with url: cvm_charities_update_path, method: :patch, id: 'charity-form', local: true do |form|%>
      <input type="hidden" name="charity_ids[]" id="charity-ids">
      <button id="savecharities" class='btn btn-primary' type="submit">Save Configuration</button>
    <% end %>
  </div>
  <div class="d-flex pt-3">
    <div class="flex-grow-1 me-5">
    <h4 class="py-3">
    <b>
  Charities Added
    </b>
  </h4>
  <div class="d-flex flex-column dashboardcard p-0">
  <ul class="list-group" id="added-charities">
  <% @addedcharities.each do |added| %>
    <li class="list-group-item border-0 border-bottom p-3" data-id="<%= added.id %>">
      <%= added.charity_name %>
    </li>
  <% end %>
  </ul>
  </div>
  </div>


  <div class="flex-grow-1">
  <h4 class="py-3">
    <b>
  Available Charities
    </b>
  </h4>
  <div class="d-flex flex-column dashboardcard p-0">
  <ul class="list-group" id="available-charities">
  <% @notaddedcharities.each do |notadded| %>
    <li class="list-group-item border-0 border-bottom p-3" data-id="<%= notadded.id %>">
      <%= notadded.charity_name %>
    </li>
  <% end %>
  </ul>
  </div>
  </div>
  </div>
</div>
  <%= javascript_include_tag 'cvmcharities' %>
