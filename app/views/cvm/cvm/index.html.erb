<div class="container content_requests_index">
  <div class="card custom-card_requests_index">
    <div class="overlay-container_requests_index">
      <img src="<%= asset_path('pexels-sora-shimazaki-5673502.jpg') %>" alt="Header Background" class="background-image_requests_index">
      <div class="overlay_requests_index">
        <div class="header-text-group_requests_index">
          <h2 class="header-text_requests_index">Corporate Volunteering Management Hub</h2>
          <h5 class="subheader-text_requests_index">Your one-stop hub in employee management for CVS!</h5>
        </div>
      </div>
    </div>
  </div>
  <div id="cvmdashboard">
  <div class="d-flex justify-content-between">
    <div class="d-flex flex-column">
      <div class="flex-grow-1">
      </div>
    <h2 class="">
      <b>
        CVM Dashboard
      </b>
    </h2>
    </div>
    <div class="d-flex justify-content-bottom">
      <%= form_with url: '/cvm/summaryreport', method: :post, class:"m-0" do %>
        <p id="reportlabel" class="pt-3 pb-2 m-0">
        <b>
        Download Report
        </b>
        </p>
        <div class="dashboardcard ps-3 p-0">
          <i class="fas fa-calendar me-2"></i>
        <input id="reportdate" class="border-0" type="text"/>
        <button id="downloadreport" class="ms-2 py-2 px-2 text-white" type="submit">Download</button>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex">
  <div class="dashboardcard d-inline-flex mt-3 p-0">
    <div class="d-flex">
      <div class="px-5 m-auto">
        <div id="companycode">
          <%= @companycode %>
      </div>
      </div>
    </div>
    <%= form_with url: cvm_generatenew_path, method: :post, class:"m-0" do %>
      <button id="refreshcode" class="d-inline btn h-100" type="submit"><i class="fas fa-refresh"></i></button>
    <% end %>
    <a class="icon-link btn" id="copycompanycode" onclick="clipboard()"><i class="fas fa-copy text-white"></i></a>
  </div>
  </div>

  <div id="dashboardcontent" class="row">
    <div class="col d-flex flex-column">
      <div class="row">
        <div class="col">
      <a href="/cvm/employees" class="mt-4 text-black text-decoration-none dashboardcard stats d-block">
        <h6 class="m-0">
            Employees
        </h6>
        <h2 class="m-0">
          <b id="numemployees">
        <%= @numemployees %>
          </b>
        </h2>
        <h6 class="text-secondary">
        <%= @numdeactivated%> inactive accounts 
        </h6>
      </a>
      </div>

        <div class="col ms-3">
      <a href="/cvm/employees" class="mt-4 text-black text-decoration-none dashboardcard stats d-block">
        <h6 class="m-0">
            Hours this week
        </h6>
        <h2 class="m-0">
          <b id="weeklyhours">
        <%= @weeklyhours %>
          </b>
        </h2>
        <h6 class="text-secondary">
        <%= @percentagechange %> from last week 
        </h6>
      </a>
      </div>
  </div>

    <div id="topemployees" class="row mt-4 d-flex">
    <div class="col d-flex pb-4 ">
      <div class="dashboardcard">
        <h5 class="m-0 pb-3 border-bottom">
          <b>
          Top employees this week
          </b>
        </h5>

        <div id="topemployeenames">
      <% @topvolunteers.each do |volunteer| %>
        <div class="row py-2" style="margin-left: 7%">
          <div class="col">
            <a class="mini-profile" href="/profile?id=<%= volunteer.id %>">
              <div class="profile-info_requests_details mb-3">
                <img src="<%= avatar_url(volunteer) %>" alt="<%= volunteer.name %>" width="50" height="50">
                <div class="profile-text">
                  <h6 class="mb-1"><%= volunteer.name %>
                    <% if volunteer.role_id == 4 %>
                      <i class="fas fa-building" style="font-size: 16px; margin-left: 10px;"></i>
                    <% end %>
                  </h6>
                  <p class="stars_user_profile">
                    <% average_rating = volunteer.received_reviews.average(:rating).to_f.round(1) %>
                    <% 5.times do |i| %>
                      <i class="fas fa-star <%= 'checked' if i < average_rating %>"></i>
                    <% end %>
                    (<%= volunteer.received_reviews.count %> reviews)
                  </p>
                </div>
              </div>
            </a>
          </div>
          <div class="col-auto ml-auto" style="padding-right: 5%;">
            <p class="mb-0"><strong><%= volunteer.weekly_hours %> hours</strong></p>
          </div>
        </div>
      <% end %>
        </div>
        </div>
  </div>
  </div>
  </div>

  <div id="charitylist" class="col-5 ms-3 d-flex pb-4">
  <a href="/cvm/charities" class="mt-4 text-black text-decoration-none dashboardcard d-block">
        <h5 class="m-0 pb-3 border-bottom">
          <b>
            Charity List
          </b>
        </h5>

        <div id="charitynames">
    <% if @charitylist.count > 0 %>
    <% @charitylist.each do |charity| %>
      <li class="list-group-item border-0 border-bottom p-3">
        <%= charity.charity_name %>
      </li>
    <% end %>
    <% else %>
      <%= render 'shared/empty_charity' %>
    <% end %>
  </div>
  </a>
  </div>
  </div>

  </div>
</div>
<%= javascript_include_tag 'cvm' %>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

