<!DOCTYPE html>
<html lang="en">

<body>
  <div class="container content_requests_index">
    <div class="card custom-card_requests_index">
      <div class="card-body header-container_requests_index">
        <h2 class="header-text_requests_index">My Requests</h2>
      </div>
    </div>

    <!-- Search Bar Container -->
    <div class="search-container_requests_index">
      <div class="">
        <div class="row">
          <div class="col-md-12">
            <form class="search-form_requests_index">
              <input type="text" class="search-input_requests_index form-control" id="searchInput" placeholder="Search my requests...">
              <button type="submit" class="btn search-btn_requests_index"><i class="fas fa-search"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Container for Request Cards -->
    <div class="card mt-0" id="requestContainer">
      <div class="card-body">
        <div class="row">
          <% @requests.each do |myrequest| %>
            <div class="col-md-12 mb-4 request-card_requests_index">
              <div class="clickable-card_requests_index-wrapper">
                <a href="<%= request_path(myrequest) %>" class="clickable-card_requests_index card h-100 d-flex flex-row align-items-center">
                  <% if myrequest.thumbnail.attached? %>
                    <img src="<%= image_url(myrequest.thumbnail) %>" class="thumbnail_requests_index" alt="<%= myrequest.title %>"/>
                  <% end %>
                  <div class="card-content_requests_index flex-grow-1">
                    <h5 class="card-title_requests_index"><%= myrequest.title %></h5>
                    <p class="card-date_requests_index"><%= myrequest.date.strftime('%d %B %Y') %> , <%= myrequest.start_time.strftime('%H:%M') %></p>
                  </div>
                  <div class="card-actions_requests_index">
                    <div class="application-indicator_requests_index">
                      <% if myrequest.application_count > 0 %>
                        <p class="application-count_requests_index"><%= myrequest.application_count %> Applicants</p>
                      <% end %>
                      <p class="applicants-status_requests_index"><i class="fas fa-users"></i> <%= myrequest.application_count %>/<%= myrequest.number_of_pax %> people found</p>
                    </div>
                  </div>
                </a>
                <div class="popup_requests_index">
                  <!-- Content for the popup -->
                  <!-- Split button -->
                  <div class="split-button_requests_index">
                    <a href="#" class="btn accept-btn_requests_index">Accept</a>
                    <a href="#" class="btn reject-btn_requests_index">Reject</a>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const requestCards = document.querySelectorAll('.request-card_requests_index');

      searchInput.addEventListener('input', function() {
        const searchTerm = searchInput.value.toLowerCase().trim();

        requestCards.forEach(card => {
          const title = card.querySelector('.card-title_requests_index').innerText.toLowerCase();
          const category = card.querySelector('.card-subtitle_requests_index').innerText.toLowerCase();

          if (title.includes(searchTerm) || category.includes(searchTerm)) {
            card.style.display = 'block'; // Show the card
          } else {
            card.style.display = 'none'; // Hide the card
          }
        });
      });

      // Show popup on hover and keep it visible when hovering over it
      const clickableCards = document.querySelectorAll('.clickable-card_requests_index-wrapper');

      clickableCards.forEach(card => {
        const popup = card.querySelector('.popup_requests_index');
        card.addEventListener('mouseenter', () => {
          popup.style.display = 'block';
          popup.style.pointerEvents = 'auto';
        });
        card.addEventListener('mouseleave', () => {
          popup.style.display = 'none';
          popup.style.pointerEvents = 'none';
        });
        popup.addEventListener('mouseenter', () => {
          popup.style.display = 'block';
          popup.style.pointerEvents = 'auto';
        });
        popup.addEventListener('mouseleave', () => {
          popup.style.display = 'none';
          popup.style.pointerEvents = 'none';
        });
      });
    });
  </script>
</body>
</html>
