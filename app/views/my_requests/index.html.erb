<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Meta tags and stylesheets -->
</head>
<body>
  <div class="container content_requests_index">
    <div class="card custom-card_requests_index">
      <div class="card-body header-container_requests_index">
        <h2 class="header-text_requests_index">My Requests</h2>
        <h5 class="subheader-text_requests_index">Check on your own requests and accept help from applicants!</h5>
      </div>
    </div>

    <!-- Search Bar Container -->
    <div class="search-container_requests_index">
      <div class="">
        <div class="row">
          <div class="col-md-12">
            <form class="search-form_requests_index">
              <input type="text" class="search-input_requests_index form-control" id="searchInput" placeholder="Search my requests...">
              <button type="submit" class="btn search-btn_requests_index"><i class="fas fa-search"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Container for Request Cards -->
    <div class="card mt-0" id="requestContainer">
      <div class="card-body">
        <div class="row">
          <% @requests.each do |myrequest| %>
            <div class="col-md-12 mb-4 request-card_requests_index">
              <div class="clickable-card_requests_index-wrapper">
                <a href="<%= request_path(myrequest) %>" class="clickable-card_requests_index card h-100 d-flex flex-row align-items-center">
                  <% if myrequest.thumbnail.attached? %>
                    <img src="<%= image_url(myrequest.thumbnail) %>" class="thumbnail_requests_index" alt="<%= myrequest.title %>"/>
                  <% end %>
                  <div class="card-content_requests_index flex-grow-1">
                    <h5 class="card-title_requests_index"><%= myrequest.title %></h5>
                    <p class="card-date_requests_index"><%= myrequest.date.strftime('%d %B %Y') %> , <%= myrequest.start_time.strftime('%H:%M') %></p>
                  </div>
                  <div class="card-actions_requests_index">
                    <div class="application-indicator_requests_index">
                      <% if myrequest.application_count > 0 %>
                        <p class="application-count_requests_index"><%= myrequest.application_count %> Applicants</p>
                      <% end %>
                      <p class="applicants-status_requests_index"><i class="fas fa-users"></i> <%= myrequest.application_count %>/<%= myrequest.number_of_pax %> people found</p>
                    </div>
                  </div>
                </a>
                <div class="popups-container">
                  <% myrequest.request_applications.each_with_index do |application, index| %>
                    <div class="popup_requests_index" style="--index: <%= index %>;">
                      <!-- Content for the popup -->
                      <a class="applicant-profile" href="/profile?id=<%=application.applicant.id%>">
                        <div class="applicant-info_requests_index">
                          <% if application.applicant.avatar.attached? %>
                            <img src="<%= image_url(application.applicant.avatar) %>" alt="<%= application.applicant.name %>" class="profile-pic_requests_index">
                          <% end %>
                          <p><%= application.applicant.name %></p>
                          <button class="btn custom-btn-chat">Chat</button>
                        </div>
                      </a>
                      <!-- Split button -->
                      <div class="split-button_requests_index">
                        <form action="/myrequests/accept?id=<%= application.id %>" method="post" class="accept-reject-form">
                          <button type="submit" class="btn accept-btn_requests_index">Accept</button>
                        </form>
                        <form action="/myrequests/reject?id=<%= application.id %>" method="post" class="accept-reject-form">
                          <button type="submit" class="btn reject-btn_requests_index">Reject</button>
                        </form>
                        <form action="/myrequests/complete?id=<%= myrequest.id %>" method="post" class="complete-form" style="display:none;">
                          <button type="submit" class="btn btn-success">Mark as Complete</button>
                        </form>
                        <a href="/myrequests/<%= myrequest.id %>/reviews/new" class="btn btn-primary review-btn" style="display:none;">Completed. Leave a Review</a>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const requestCards = document.querySelectorAll('.request-card_requests_index');

      searchInput.addEventListener('input', function() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        console.log('Search term:', searchTerm); // Debug log

        requestCards.forEach(card => {
          const titleElement = card.querySelector('.card-title_requests_index');
          const title = titleElement ? titleElement.innerText.toLowerCase() : '';
          console.log('Card title:', title); // Debug log

          if (title.includes(searchTerm)) {
            card.style.display = 'block'; // Show the card
          } else {
            card.style.display = 'none'; // Hide the card
          }
        });
      });

      // Show popup on hover and keep it visible when hovering over it
      const clickableCards = document.querySelectorAll('.clickable-card_requests_index-wrapper');

      clickableCards.forEach(card => {
        const popupsContainer = card.querySelector('.popups-container');
        const popups = card.querySelectorAll('.popup_requests_index');
        
        card.addEventListener('mouseenter', () => {
          popupsContainer.style.display = 'block';
          popups.forEach(popup => {
            popup.style.display = 'block';
          });
        });
        
        card.addEventListener('mouseleave', () => {
          popupsContainer.style.display = 'none';
          popups.forEach(popup => {
            popup.style.display = 'none';
          });
        });
      });

      // Handle Accept button click
      document.querySelectorAll('.accept-reject-form').forEach(form => {
        form.addEventListener('submit', function(event) {
          event.preventDefault();
          const formData = new FormData(form);
          fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            }
          })
          .then(response => {
            if (response.ok) {
              // Hide the accept and reject buttons
              form.querySelector('.accept-btn_requests_index').style.display = 'none';
              form.nextElementSibling.querySelector('.reject-btn_requests_index').style.display = 'none';
              // Show the mark as complete button
              form.parentElement.querySelector('.complete-form').style.display = 'block';
            } else {
              console.error('Failed to accept the request.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
        });
      });

      // Handle Mark as Complete button click
      document.querySelectorAll('.complete-form').forEach(form => {
        form.addEventListener('submit', function(event) {
          event.preventDefault();
          const formData = new FormData(form);
          fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            }
          })
          .then(response => {
            if (response.ok) {
              // Hide the mark as complete button
              form.style.display = 'none';
              // Show the review button
              form.parentElement.querySelector('.review-btn').style.display = 'block';
            } else {
              console.error('Failed to mark the request as complete.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
        });
      });
    });
  </script>
</body>
</html>
