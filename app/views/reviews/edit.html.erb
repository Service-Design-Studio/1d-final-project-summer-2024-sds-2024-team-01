<!-- app/views/reviews/edit.html.erb -->
<h1>Edit Your Review</h1>
<%= form_with(model: @review, local: true) do |form| %>
  <div>
    <%= form.label :rating, 'Rating'%>
    <%= form.number_field :rating, in: 1..5, placeholder:"Rating", id: 'review_rating' %>
  </div>
  <div>
    <%= form.label :review_content, 'Comment' %>
    <%= form.text_area :review_content, placeholder:"Comment", id: 'review_comment' %>
  </div>
  <div>
    <%= form.submit 'Update Review' %>
  </div>
<% end %>
