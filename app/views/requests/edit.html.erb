<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Request</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" rel="stylesheet">
  <style>
    .content {
      padding-top: 80px; /* Adjust this value based on the height of your navbar */
    }
    .custom-card {
      margin-top: 30px;
      width: 100%;
      border: none;
      border-top-left-radius: 5px;
      border-top-right-radius: 5px;
    }
    .header-card {
      background-color: #ad88c6;
      color: white;
      position: relative;
      height: 120px;
    }
    .header-text {
      position: absolute;
      bottom: 10px;
      right: 20px;
      margin: 0;
    }
    .upload-box {
      cursor: pointer;
    }

    .custom-btn-lilac {
      background-color: #ad88c6;
      border-color: #ad88c6;
      color: white;
    }

    .custom-btn-lilac:hover {
      background-color: #9852a6; /* Slightly darker shade for hover effect */
      border-color: #9852a6;
    }

    image-preview {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%; /* Set the height as needed */
      width: 100%; /* Set the width as needed */
    }

    preview-img {
      display: none;
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  
  <div class="container content">
    <div class="card mb-0 custom-card header-card">
      <div class="card-body header-container">
        <a href="/requests" class="btn btn-secondary me-2">
          <i class="bi bi-arrow-left"></i> Back to requests
        </a>
        <h2 class="header-text">Edit Request</h2>
      </div>
    </div>
    <!-- Banner Photo Card Container -->
    <div class="card mb-4 custom-card">
      <div class="card-body">
        <h5 class="card-title">Banner Photo</h5>
        <div class="text-center">
          <div class="border p-5 upload-box" id="upload-box" style="cursor: pointer;">
            <!-- Image Preview Container -->
            <div id="image-preview" class="mb-3">
              <% if @request.image.present? %>
                <img id="preview-img" src="<%= @request.image.url %>" alt="Your image" style="display: block; max-width: 100%; height: auto;" />
                <i class="bi bi-plus-circle" id="plus-icon" style="font-size: 2rem; display: none;"></i>
              <% else %>
                <img id="preview-img" src="#" alt="Your image" style="display: none; max-width: 100%; height: auto;" />
                <i class="bi bi-plus-circle" id="plus-icon" style="font-size: 2rem;"></i>
              <% end %>
            </div>
            <!-- File Input -->
            <input type="file" id="file-input" style="display: none;" accept="image/*" />
            <p>Jpg or Png, not exceeding 3mb in size</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Form Card Container -->
    <div class="card mb-4 custom-card">
      <div class="card-body">
        <%= form_with(model: @request, local: true) do |form| %>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="title" class="form-label">Title:</label>
              <%= form.text_field :title, id: "title", class: "form-control", placeholder: "A few words will do!" %>
            </div>
            <div class="col-md-6">
              <label for="date" class="form-label">Date:</label>
              <%= form.date_field :date, id: "date", class: "form-control", placeholder: "When will it be?" %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-3">
              <label for="category" class="form-label">Category:</label>
              <%= form.select :category, ['Manual labour', 'Teaching', 'Delivery'], id: "category", class: "form-control" %>
            </div>
            <div class="col-md-3">
              <label for="volunteers" class="form-label">Number of volunteers needed:</label>
              <%= form.select :volunteers, (1..5).to_a, id: "volunteers", class: "form-control" %>
            </div>
            <div class="col-md-3">
              <label for="start_time" class="form-label">Start Time:</label>
              <%= form.time_field :start_time, id: "start_time", class: "form-control", placeholder: "Time of the event" %>
            </div>
            <div class="col-md-3">
              <label for="end_time" class="form-label">End Time:</label>
              <%= form.time_field :end_time, id: "end_time", class: "form-control", placeholder: "Time of the event" %>
            </div>
          </div>
          <div class="col-md-12">
            <label for="description" class="form-label">Description:</label>
            <%= form.text_area :description, id: "description", class: "form-control", rows: 6, placeholder: "Describe your request!" %>
          </div>
          <div class="input-group mb-3 mt-3 d-flex align-items-center">
            <div class="input-group-prepend">
              <span class="input-group-text rounded-start rounded-sm" id="incentive-label">Incentive?</span>
            </div>
            <input type="hidden" id="reward-hidden" name="reward" class="form-control" value="<%= @request.reward %>">
            <button class="btn btn-outline-secondary dropdown-toggle rounded-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="reward-dropdown"><%= @request.reward.presence || 'Yes/No' %></button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#" data-value="Yes">Yes</a></li>
              <li><a class="dropdown-item" href="#" data-value="No">No</a></li>
            </ul>
            <input type="text" id="reward-text" class="form-control rounded-sm" aria-label="Text input with dropdown button" placeholder="If so, describe your incentive." <%= @request.reward == 'Yes' ? '' : 'disabled' %> value="<%= @request.reward_description %>">
          </div>
          <div class="d-flex justify-content-end mt-3">
            <%= form.submit "Update", class: "btn custom-btn-lilac" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Incentives dropdown feature
    document.addEventListener('DOMContentLoaded', function() {
      const rewardDropdown = document.getElementById('reward-dropdown');
      const rewardHidden = document.getElementById('reward-hidden');
      const rewardText = document.getElementById('reward-text');

      document.querySelectorAll('.dropdown-item').forEach(function(item) {
        item.addEventListener('click', function(event) {
          event.preventDefault();
          const value = this.getAttribute('data-value');
          rewardHidden.value = value;
          rewardDropdown.textContent = value;

          // Enable or disable the text input based on the dropdown selection
          if (value === 'Yes') {
            rewardText.disabled = false;
          } else {
            rewardText.disabled = true;
            rewardText.value = ''; // Clear the text input when disabled
          }
        });
      });
    });

    // Image upload and preview feature
    document.getElementById('upload-box').addEventListener('click', function() {
      document.getElementById('file-input').click();
    });

    document.getElementById('file-input').addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        // Check file size (3MB max)
        if (file.size > 3 * 1024 * 1024) {
          alert('File size exceeds 3MB.');
          return;
        }
        // Check file type (JPG or PNG)
        if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
          alert('Please upload a JPG or PNG image.');
          return;
        }

        const reader = new FileReader();
        reader.onload = function(e) {
          const previewImg = document.getElementById('preview-img');
          previewImg.src = e.target.result;
          previewImg.style.display = 'block';
          document.getElementById('plus-icon').style.display = 'none';
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
