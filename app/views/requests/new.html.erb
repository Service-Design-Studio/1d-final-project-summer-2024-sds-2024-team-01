<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New application</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" rel="stylesheet">
  <style>
    .content {
      padding-top: 80px; /* Adjust this value based on the height of your navbar */
    }
    .custom-card {
      margin-top: 30px;
      width: 100%;
      border: none;
      border-top-left-radius: 5px;
      border-top-right-radius: 5px;
    }
    .header-card {
      background-color: #ad88c6;
      color: white;
      position: relative;
      height: 120px;
    }
    .header-text {
      position: absolute;
      bottom: 10px;
      right: 20px;
      margin: 0;
    }
    .upload-box {
      cursor: pointer;
    }

    .custom-btn-lilac {
      background-color: #ad88c6;
      border-color: #ad88c6;
      color: white;
    }

    .custom-btn-lilac:hover {
      background-color: #9852a6; /* Slightly darker shade for hover effect */
      border-color: #9852a6;
    }

    #image-preview {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%; /* Set the height as needed */
      width: 100%; /* Set the width as needed */
    }

    #preview-img {
      display: none;
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  
  <div class="container content">
    <div class="card mb-0 custom-card header-card">
      <div class="card-body header-container">
        <a href="/requests" class="btn btn-secondary me-2">
          <i class="bi bi-arrow-left"></i> Back to requests
        </a>
        <h2 class="header-text">New Request</h2>
      </div>
    </div>
    <!-- Banner Photo Card Container -->
    <div class="card mb-4 custom-card">
      <div class="card-body">
        <h5 class="card-title">Banner Photo</h5>
        <div class="text-center">
          <div class="border p-5 upload-box" id="upload-box" style="cursor: pointer;">
            <!-- Image Preview Container -->
            <div id="image-preview" class="mb-3">
              <img id="preview-img" src="#" alt="Your image" style="display: none; max-width: 100%; height: auto;" />
            </div>
            <!-- Plus Symbol -->
            <i class="bi bi-plus-circle" id="plus-icon" style="font-size: 2rem;"></i>
            <!-- File Input -->
            <input type="file" id="file-input" style="display: none;" accept="image/*" />
            <p>Jpg or Png, not exceeding 3mb in size</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Form Card Container -->
    <div class="card mb-4 custom-card">
      <div class="card-body">
        <form action="/requests" method="post">
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="title" class="form-label">Title:</label>
              <input type="text" id="title" name="title" class="form-control" placeholder="A few words will do!" required>
            </div>
            <div class="col-md-6">
              <label for="date" class="form-label">Date:</label>
              <input type="date" id="date" name="date" class="form-control" placeholder="When will it be?" required>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-3">
              <label for="category" class="form-label">Category:</label>
              <select id="category" name="category" class="form-control" required>
                <option value="">Choose...</option>
                <option value="Manual labour">Manual labour</option>
                <option value="Teaching">Teaching</option>
                <option value="Delivery">Delivery</option>
              </select>
            </div>
            <div class="col-md-3">
              <label for="number_of_pax" class="form-label">Number of volunteers needed:</label>
              <input type="number" id="number_of_pax" name="number_of_pax" class="form-control" required>
            </div>
            <div class="col-md-3">
              <label for="start_time" class="form-label">Start Time:</label>
              <input type="time" id="start_time" name="start_time" class="form-control" placeholder="Time of the event" required>
            </div>
            <div class="col-md-3">
              <label for="duration" class="form-label">Duration:</label>
              <input type="number" id="duration" name="duration" class="form-control" placeholder="How many hours?" required>
            </div>
          </div>
          <div class="col-md-12 mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control" rows="6" placeholder="Describe your request!" required></textarea>
          </div>
          <div class="input-group mb-3 mt-3 d-flex align-items-center">
            <div class="input-group-prepend">
              <span class="input-group-text rounded-start rounded-sm" id="incentive-label">Incentive?</span>
            </div>
            <select id="reward_type" name="reward_type" class="form-control" required>
              <option value="">Choose...</option>
              <option value="None">None</option>
              <option value="Money">Money</option>
              <option value="Service">Service</option>
            </select>
          </div>
          <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn custom-btn-lilac">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('reward_type').addEventListener('change', function() {
      const selectedValue = this.value;
      console.log('Selected value:', selectedValue);
      // You can add any additional logic here based on the selected value.
    });

    // Image upload and preview feature
    document.getElementById('upload-box').addEventListener('click', function() {
      document.getElementById('file-input').click();
    });

    document.getElementById('file-input').addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        // Check file size (3MB max)
        if (file.size > 3 * 1024 * 1024) {
          alert('File size exceeds 3MB.');
          return;
        }
        // Check file type (JPG or PNG)
        if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
          alert('Please upload a JPG or PNG image.');
          return;
        }

        const reader = new FileReader();
        reader.onload = function(e) {
          const previewImg = document.getElementById('preview-img');
          previewImg.src = e.target.result;
          previewImg.style.display = 'block';
          document.getElementById('plus-icon').style.display = 'none';
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
