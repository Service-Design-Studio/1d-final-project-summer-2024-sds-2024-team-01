<!DOCTYPE html>
<html>

<style>
  body.passwords-new, body.passwords-create {
    background: linear-gradient(180deg, #AC88C6 0%, #666DAD 100%);
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }

  .password-reset-container {
    background-color: white;
    margin: 0 auto;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
  }

  .password-reset-container .field {
    margin-bottom: 1rem;
  }

  .password-reset-container .actions {
    margin-top: 1rem;
  }

  .password-reset-container .btn {
    width: 100%;
    padding: 10px;
    background-color: #9b59b6;
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
  }

  .password-reset-container .btn:hover {
    background-color: #8e44ad;
  }

  .password-reset-container img {
    display: block;
    margin: 0 auto 1rem auto;
    width: 100px; /* Adjust the size as needed */
  }
</style>

<body class="<%= "#{controller_name}-#{action_name}" %>">
  <div class="password-reset-container">
    <img src="<%= asset_path('OIG.jpg') %>" alt="Logo">
    <h2 class="text-center">Forgot your password?</h2>
    <p class="text-center">Enter your email to reset your password</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
</html>
