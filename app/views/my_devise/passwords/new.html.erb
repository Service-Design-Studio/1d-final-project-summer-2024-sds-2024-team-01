<!DOCTYPE html>
<html>

<style>
  body.sessions-new {
    background: linear-gradient(180deg, #AC88C6 0%, #666DAD 100%);
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }
  .login-container {
    background-color: white;
    margin: 0 auto;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
  }
  .login-container .field {
    margin-bottom: 1rem;
  }
  .login-container .actions {
    margin-top: 1rem;
  }
  .login-container .btn {
    width: 100%;
    padding: 10px;
    background-color: #9b59b6;
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
  }
  .login-container .btn:hover {
    background-color: #8e44ad;
  }
  .login-container .logo {
    display: block;
    margin: 0 auto 1rem;
  }
  .login-container h2,
  .login-container p {
    text-align: center;
  }
</style>

<body class="sessions-new">
  <div class="login-container">
    <img src="/path/to/logo.png" alt="Logo" class="logo">
    <h2>Forgot your password?</h2>
    <p>Enter your email to reset your password</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Send me password reset instructions!", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>

</html>

