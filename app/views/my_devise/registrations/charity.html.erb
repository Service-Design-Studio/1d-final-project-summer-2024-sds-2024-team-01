<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "application.css"%>
  </head>

<div class="signup-container">
      <div class="d-flex justify-content-center">
        <%= image_tag 'icon_v1.png', width:'20%', alt: 'Logo', class: 'rounded-circle d-inline-block align-text-top'%>
      </div>
  <h2 class="signup-header">Start your own account!</h2>

  <%= form_for(@resource, url: "/registrations/createcompany") do |f| %>

    <div class="field">
      <%= f.text_field :charity_name, placeholder: "Charity Name", autofocus: true, class: "form-control"%>
    </div>

  <% end %>
  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
</html>
