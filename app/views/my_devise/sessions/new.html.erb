
<!DOCTYPE html>
<html>

<style>
  body.sessions-new {
    background: linear-gradient(180deg, #AC88C6 0%, #666DAD 100%);
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }
  .login-container {
    background-color: white;
    margin: 0 auto;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
  }
  .login-container .field {
    margin-bottom: 1rem;
  }
  .login-container .actions {
    margin-top: 1rem;
  }
  .login-container .btn {
    width: 100%;
    padding: 10px;
    background-color: #9b59b6;
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
  }

  .login-container .btn:hover {
    background-color: #8e44ad;
  }
</style>


<div class="login-container">
  <img src="<%= 'logo.png' %>" alt="Logo">
  <h2 class="text-center">Ready to help!</h2>
  <p class="text-center">Enter your credentials to login</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.telephone_field :number, placeholder: "Phone number", autofocus: true, autocomplete: "phone-number", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
        <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Login", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>


</html>