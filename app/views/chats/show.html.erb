<!-- app/views/chats/show.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat Conversation</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .chat-container {
      height: 100vh;
    }
    .message-area {
      overflow-y: auto;
      padding: 20px;
      height: calc(100vh - 56px - 70px);
    }
    .message {
      padding: 10px;
      border-radius: 20px;
      margin-bottom: 10px;
      max-width: 60%;
      word-wrap: break-word;
    }
    .message.sent {
      background-color: #e1ffc7;
      align-self: flex-end;
    }
    .message.received {
      background-color: #fff;
      border: 1px solid #ddd;
      align-self: flex-start;
    }
    .input-area {
      padding: 10px;
      border-top: 1px solid #ddd;
    }
  </style>
</head>
<body>
  <div class="container-fluid chat-container d-flex p-0">
    <div class="sidebar col-3 border-right p-0">
      <h4 class="p-3">Inbox</h4>
      <% if @chats.present? %>
        <% @chats.each do |chat| %>
          <a href="<%= chat_path(chat) %>" class="chat-preview list-group-item list-group-item-action d-flex align-items-center">
            <div class="info flex-grow-1 d-flex flex-row">
              <div class="flex-column">
              <p class="mb-1 fs-5"><%= chat.applicant == current_user ? chat.requester.name : chat.applicant.name %></h5>
              <p class="mb-1"><%= chat.request.title %></p>
              </div>
              <div class="flex-column">
              <div class="time text-right">
              <%= chat.messages.order(created_at: :desc).first.created_at.strftime("%d/%m") %>
              </div>
              <img src="<%= chat.request.thumbnail %>" alt="Request Image">
              </div>
            </div>
          </a>
        <% end %>
      <% else %>
        <p class="p-3">No chats available.</p>
      <% end %>
    </div>
    <div class="main-chat col-9 p-0 d-flex flex-column">
      <div class="message-area flex-grow-1 d-flex flex-column">
        <% @messages.each do |message| %>
          <div class="message <%= message.sender == current_user ? 'sent' : 'received' %>">
            <%= message.message_text %>
          </div>
        <% end %>
      </div>
      <div class="input-area border-top p-3">
        <form id="message-form" action="<%= chat_messages_path(@chat) %>" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="input-group">
            <input type="text" name="message[message_text]" class="form-control" placeholder="Type a message...">
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit">Send</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
